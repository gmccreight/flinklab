#!/bin/bash

case "$1" in
    sh)
        docker-compose run --rm console /bin/bash
        ;;
    package)
        docker-compose run --rm console mvn package -f ${2#app/}/pom.xml
        ;;
    clean)
        cd target
        # Remove everything but .gitignore
        ls  | grep -v .gitignore | xargs rm -r
        ;;
    *)
        docker-compose run --rm console flink $*
esac
